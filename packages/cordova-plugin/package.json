{
  "name": "com.outsystems.plugins.filetransfer",
  "displayName": "FileTransfer",
  "version": "1.0.0",
  "description": "File transfer plugin for Cordova",
  "scripts": {
    "lint": "npm run eslint && npm run prettier -- --check",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js}\"",
    "docgen": "docgen --api IFileTransfer --output-readme README.md --output-json ./dist/docs.json",
    "build": "rimraf ./dist && npm run docgen && vite build",
    "update:tag": "node ./scripts/change-extensibility.js",
    "update:version": "node ./scripts/tag-applications-o11.js",
    "deploy": "node ./scripts/deploy.js",
    "download": "node ./scripts/download.js"
  },
  "keywords": [
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios"
  ],
  "cordova": {
    "id": "com.outsystems.plugins.filetransfer",
    "platforms": [
      "android",
      "ios"
    ]
  },
  "author": "OutSystems",
  "license": "MIT",
  "dependencies": {
    "@capacitor/synapse": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "prettier": "@ionic/prettier-config",
  "docs": "typedoc",
  "devDependencies": {
    "@capacitor/docgen": "^0.2.2",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/cordova": "^11.0.3",
    "@types/node": "^20.17.14",
    "cordova-common": "^5.0.0",
    "eslint": "^7.11.0",
    "prettier": "~2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "~5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1"
  }
}